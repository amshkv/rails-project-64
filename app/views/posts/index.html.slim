.container.my-5
  h1.mb-5 = t('application_name')
  - if @posts.any?
    - @posts.each do |post|
      h2
        = link_to post.title, post_path(post)
      p = truncate(post.body, length: 150, separator: ' ')
      .small
        span.d-inline-block = t('.likes_count', count: post.likes.size)
        span.mx-2 |
        = post.creator.email
        span.mx-2 |
        span.d-inline-block = time_ago_in_words(post.created_at)

      hr.my-5

  - else
    p = t('.no_posts')
